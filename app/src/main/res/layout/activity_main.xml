<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/accountForm"
        android:layout_width="230dp"
        android:layout_height="46dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/button_style_one"
        android:text="create profile"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="137dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="8dp"
        android:contentDescription='logo'
        app:layout_constraintBottom_toTopOf="@+id/accountForm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715"
        app:srcCompat="@drawable/landing_logo" />

</android.support.constraint.ConstraintLayout>